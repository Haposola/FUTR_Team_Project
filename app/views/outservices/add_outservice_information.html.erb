<div class="service main_container">

<h1>Add Information</h1>

<h2>
  <%= @outservice_place.service_kind %>
</h2>
<div class="well service_detail">
    <div >
       <div style="float:right;margin-left:30pxd">
          <%= image_tag(@outservice_place.picture_addr,:class=>"img-polaroid") %>
       </div>
       <h2> <%= @outservice_place.name %></h2>
       <div style="text-align:left">
        <%= @outservice_place.description %>
       </div>
    </div>
</div>

<div class="service_comment add_service_information">
<%= form_for(@outservice_place, url:update_outservice_path(:name=>@outservice_place.name,:service_kind=>@outservice_place.service_kind)) do |f| %>
  <div class="field" style="margin-top:30px">
    Add Information Here:<br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= submit_tag "submit", :class=>"submit btn btn-primary"%>
  </div>
<% end %>

</div>
<div align="right" style="margin-right:15%">
    <%= link_to 'Back', outservices_path %>
</div>
</div>