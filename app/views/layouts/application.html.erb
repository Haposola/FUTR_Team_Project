<!DOCTYPE html>
<html>
<head>
  <title>FUTR</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    
<div class="topBar">
  <div class="header">
    <div class="header_resize">
      <div class="logo">
        <h1><%= link_to 'HITer', '/' %></h1>
      </div>
      <div class="menu_nav">
        <ul>
          <li class="active"><%=  link_to 'Home', :controller => '/index',:action =>'index'%></li>
          <li><%= link_to 'map', :controller => '/hitmap',:action =>'index'%></li>
          <li><%= link_to 'map2', :controller => '/hitmap',:action =>'another'%></li>
          <li><%= link_to 'Activity',:controller => '/activities',:action =>'list',:id=>'1' %></li>
          <li><%= link_to 'Services', outservices_path %></li>
          <li><a href="">Q&A</a></li>
        </ul>
      </div>
      <div class="clr"></div>
    </div>
  </div>

  <% if user_signed_in? %>
    <div class = "usrtop">
      <%= link_to current_user.email, '/users/index' %>
    </div>
  <% else %>
    <div class="sign">
      <%= link_to 'Sign In',new_user_session_path %> | 
      <%= link_to 'Sign Up',new_user_registration_path %>
    <% end %>
  </div> 
</div>
<div class  ="container">
 <p class="notice"><%=notice%></p>
      <p class="alert"><%=alert%></p>
<%= yield %>
</div>
</body>
</html>
