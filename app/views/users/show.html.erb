
<div class="topBar">
  <div class="header">
    <div class="header_resize">
      <div class="logo">
        <h1>
          <a href="index.html"><span>HITer</span> </a>
        </h1></div>
      <div class="menu_nav">
        <ul>
          <li class="active"><a href="index.html">Home</a></li>
          <li><a href="hitmap.html">HIT map</a></li>
          <li><a href="activity.html">Activity</a></li>
          <li><a href="server.html">Server</a></li>
          <li><a href="ques.html">Q&A</a></li>
        </ul>
      </div>
      <div class="clr"></div>
    </div>
  </div>

  <% if log = SignedInLog.checkout(cookies[:riskfit_token]) %>
    <% @user = User.find(:first, :conditions =>["email = ? ", log.email])%>
    <div class = "usrtop">
      <%= link_to @user.nickname, @user %>
    </div>
  <% else %>
    <div class="sign">
      <%= link_to 'signin', "signin" %> |
      <%= link_to 'signup', new_user_path %>
    </div>
  <% end %>
</div> 

<div id = "userSideBar">
    This is a side bar<br />
    About what a user can do<br />
    Like ....<br />
    <a></a>
    Ask a question<br />
    Put a activity<br />
    ....<br />
    <%= link_to 'logout',  :action => 'logout' %>
</div>

<div id ="userContent">
<p id="notice"><%= notice %></p>
