<div class="topBar">
    <%= link_to 'Here is our logo', :controller => 'index', :action => 'index' %>
    <% if log = SignedInLog.checkout(cookies[:riskfit_token]) %>
        <% @user = User.find(:first, :conditions =>["email = ? ", log.email])%>
        <div class = "usrtop">
            <%= link_to @user.nickname, @user %>
        </div>
    <% else %>
        <div class="sign">
            <%= link_to 'signin', "signin" %> |
            <%= link_to 'signup', new_user_path %>
        </div>
    <% end %>
</div>
<div class ="others">
<h1>Listing activities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Tim</th>
    <th>Peonum</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= activity.name %></td>
    <td><%= activity.tim %></td>
    <td><%= activity.peoNum %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<% if log && log != nil%>
<%= link_to 'New Activity', new_activity_path %>
<% end %>
</div>